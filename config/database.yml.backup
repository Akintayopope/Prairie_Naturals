default: &default
  adapter: postgresql
  encoding: unicode
  username: <%= ENV.fetch("POSTGRES_USER", "pn") %>
  password: <%= ENV.fetch("POSTGRES_PASSWORD", "pnpass") %>
  host: <%= ENV.fetch("POSTGRES_HOST", "db") %>
  port: <%= ENV.fetch("POSTGRES_PORT", "5432") %>
  database: <%= ENV.fetch("POSTGRES_DB", "pn_production") %>
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

test:
  <<: *default
  database: <%= ENV.fetch("POSTGRES_DB", "pn_production") %>_test

production:
  url: <%= ENV.fetch("DATABASE_URL") %>
