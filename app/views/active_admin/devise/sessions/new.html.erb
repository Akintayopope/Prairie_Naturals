<% content_for :title, "Admin log in" %>
<div class="floating-shapes" aria-hidden="true">
  <div class="shape"></div>
  <div class="shape"></div>
  <div class="shape"></div>
</div>
<div class="login-container py-5">
  <div class="login-card p-4 p-md-">
    <div class="loading-overlay" id="loadingOverlay" hidden>
      <div class="loading-spinner" role="status" aria-live="polite" aria-label="Loading"></div>
    </div>
    <div class="card-body">
      <div class="admin-icon">
        <i class="bi bi-shield-check"></i>
      </div>
      <h1 class="welcome-title">Welcome Back</h1>
      <p class="welcome-subtitle">Log in to manage products, orders, and the dashboard.</p>
      <%# Devise flash (invalid credentials, etc.) %>
      <% if flash.any? %>
        <div class="error-messages mb-3" role="alert" aria-live="polite">
          <% flash.each do |k,v| %>
            <div class="<%= k.to_s == "alert" ? "text-danger" : "text-info" %> d-flex align-items-center gap-2">
              <i class="bi bi-exclamation-triangle"></i>
              <span><%= v %></span>
            </div>
          <% end %>
        </div>
      <% end %>
      <%= form_for(resource, as: resource_name, url: session_path(:admin_user),
                   html: { class: "admin-login-form", id: "adminLoginForm" },
                   data: { turbo: false }) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email, class: "form-label" do %>
            <i class="bi bi-envelope me-2"></i>Email Address
          <% end %>
          <%= f.email_field :email,
                class: "form-label",
                id: "email",
                placeholder: "admin@example.com",
                autocomplete: "email",
                required: true,
                autofocus: true %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :password, class: "form-label" do %>
            <i class="bi bi-lock me-2"></i>Password
          <% end %>
          <div class="input-group">
            <%= f.password_field :password,
                  class: "form-control",
                  id: "password",
                  placeholder: "Your password",
                  autocomplete: "current-password",
                  required: true %>
            <button type="button"
                    class="btn btn-outline-secondary"
                    id="togglePassword"
                    aria-label="Show or hide password">
              <i class="bi bi-eye" id="toggleIcon"></i>
            </button>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
            <%= f.label :remember_me, "Remember me for 30 days", class: "form-check-label" %>
          </div>
        <% end %>
        <div class="button-group d-grid gap-2 d-sm-flex align-items-center">
          <%= f.submit "Log In",
                class: "btn btn-primary d-inline-flex align-items-center gap-2",
                data: { disable_with: "Logging inâ€¦" } %>
          <%= link_to root_path, class: "btn-secondary-outline d-inline-flex align-items-center gap-2" do %>
            <i class="bi bi-arrow-left"></i>Back to Store
          <% end %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= link_to new_password_path(:admin_user), class: "forgot-password-link d-inline-flex align-items-center gap-2" do %>
          <i class="bi bi-key"></i>
          Forgot your password?
        <% end %>
      </div>
      <div class="help-text">
        Need help? <%= link_to "Contact us", contact_path %> for assistance.
      </div>
    </div>
  </div>
</div>
<script defer>
  // Password toggle
  document.addEventListener("DOMContentLoaded", function () {
    const toggle = document.getElementById("togglePassword");
    const pwd = document.getElementById("password");
    const icon = document.getElementById("toggleIcon");
    if (toggle && pwd && icon) {
      toggle.addEventListener("click", () => {
        const isHidden = pwd.type === "password";
        pwd.type = isHidden ? "text" : "password";
        icon.className = isHidden ? "bi bi-eye-slash" : "bi bi-eye";
      });
    }


    const form = document.getElementById("adminLoginForm");
    const overlay = document.getElementById("loadingOverlay");
    if (form && overlay) {
      form.addEventListener("submit", () => {
        overlay.hidden = false;
      }, { passive: true });
    }


    const card = document.querySelector(".login-card");
    if (card) {
      document.addEventListener("mousemove", (e) => {
        const r = card.getBoundingClientRect();
        const x = e.clientX - (r.left + r.width / 2);
        const y = e.clientY - (r.top + r.height / 2);
        card.style.transform = `perspective(1000px) rotateY(${x / 60}deg) rotateX(${-y / 60}deg) translateY(-6px)`;
      });
      document.addEventListener("mouseleave", () => {
        card.style.transform = "perspective(1000px) rotateY(0) rotateX(0) translateY(0)";
      });
    }


    const requiredInputs = document.querySelectorAll("#adminLoginForm input[required]");
    requiredInputs.forEach((el) => {
      el.addEventListener("blur", () => {
        if (!el.checkValidity()) {
          el.classList.add("is-invalid");
        } else {
          el.classList.remove("is-invalid");
          el.classList.add("is-valid");
        }
      });
      el.addEventListener("input", () => el.classList.remove("is-invalid", "is-valid"));
    });
  });
</script>
