<!-- app/views/devise/registrations/new.html.erb -->
<% content_for :title, "Create your account" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4 p-md-5">
          <h1 class="h3 mb-2">Create your account</h1>
          <p class="text-muted mb-4">Shop faster, track orders, and save your address for checkout.</p>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Account -->
            <div class="row g-3">
              <div class="col-12">
                <%= f.label :username, class: "form-label" %>
                <%= f.text_field :username, required: true, autocomplete: "username", class: "form-control", placeholder: "e.g. prairiefan" %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, required: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.label :password, class: "form-label" %>
                <% if @minimum_password_length %>
                  <small class="text-muted d-block mb-1">(<%= @minimum_password_length %> characters minimum)</small>
                <% end %>
                <%= f.password_field :password, required: true, autocomplete: "new-password", class: "form-control", placeholder: "Create a password" %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.label :password_confirmation, class: "form-label" %>
                <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "form-control", placeholder: "Re-enter password" %>
              </div>
            </div>

            <hr class="my-4">

            <!-- Address -->
            <% resource.build_address unless resource.address %>
            <fieldset>
              <legend class="h6 mb-3">Shipping Address</legend>
              <%= f.fields_for :address do |a| %>
                <div class="row g-3">
                  <div class="col-12">
                    <%= a.label :line1, "Address line 1", class: "form-label" %>
                    <%= a.text_field :line1, class: "form-control", placeholder: "123 Prairie View Dr" %>
                  </div>

                  <div class="col-12">
                    <%= a.label :line2, "Address line 2 (optional)", class: "form-label" %>
                    <%= a.text_field :line2, class: "form-control", placeholder: "Apt, suite, etc." %>
                  </div>

                  <div class="col-12 col-md-6">
                    <%= a.label :city, class: "form-label" %>
                    <%= a.text_field :city, class: "form-control", placeholder: "Winnipeg" %>
                  </div>

                  <div class="col-12 col-md-6">
                    <%= a.label :postal_code, "Postal Code", class: "form-label" %>
                    <%= a.text_field :postal_code, class: "form-control", placeholder: "R3Z 5K2", autocomplete: "postal-code" %>
                  </div>

                  <div class="col-12 col-md-6">
                    <%= a.label :province_id, "Province", class: "form-label" %>
                    <% if defined?(@provinces) && @provinces.present? %>
                      <%= a.collection_select :province_id, @provinces, :id, :name,
                            { include_blank: "Select a province" },
                            { class: "form-select" } %>
                    <% else %>
                      <%= a.number_field :province_id, class: "form-control", placeholder: "Province ID" %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </fieldset>

            <div class="d-grid d-sm-flex gap-2 mt-4">
              <%= f.submit "Sign up", class: "btn btn-primary px-4" %>
              <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-secondary" %>
            </div>
          <% end %>

          <div class="mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

      <p class="text-center text-muted small mt-3 mb-0">
        By creating an account, you agree to our
        <%= link_to "Terms", storefront_terms_path, class: "text-decoration-none" %> and
        <%= link_to "Privacy Policy", storefront_privacy_policy_path, class: "text-decoration-none" %>.
      </p>
    </div>
  </div>
</div>
