<h2>Sign up</h2>

<%# Ensure nested address exists before rendering the form %>
<% resource.build_address unless resource.address %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Username -->
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, required: true %>
  </div>

  <!-- Email / Password -->
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <hr>
  <h3>Address</h3>

  <%= f.fields_for :address do |a| %>
    <div class="field">
      <%= a.label :line1, "Address line 1" %><br>
      <%= a.text_field :line1, required: true %>
    </div>

    <div class="field">
      <%= a.label :line2, "Address line 2" %><br>
      <%= a.text_field :line2 %>
    </div>

    <div class="field">
      <%= a.label :city %><br>
      <%= a.text_field :city, required: true %>
    </div>

    <div class="field">
      <%= a.label :postal_code, "Postal Code" %><br>
      <%= a.text_field :postal_code, required: true %>
    </div>

    <div class="field">
      <%= a.label :province_id, "Province" %><br>
      <%= a.collection_select :province_id, Province.order(:name), :id, :name,
            { include_blank: "Select a province" }, { required: true } %>
    </div>
  <% end %>

  <div class="actions" style="margin-top:12px;">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
