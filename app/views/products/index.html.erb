<% content_for :title, "Products" %>

<div class="container my-4">
  <h1 class="mb-4">Our Products</h1>

  <div class="row g-4">
    <% @products.each do |product| %>
      <div class="col-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">

          <%# ---- IMAGE: prefer remote URL -> ActiveStorage -> placeholder ---- %>
          <% if product.images.attached? %>
  <%= image_tag url_for(product.images.first),
                alt: product.name,
                class: "card-img-top product-thumb",
                loading: "lazy" %>
<% elsif product.image_url.present? %>
  <%= image_tag product.image_url,
                alt: product.name,
                class: "card-img-top product-thumb",
                loading: "lazy" %>
<% else %>
  <%= image_tag product_placeholder,
                alt: "No image",
                class: "card-img-top product-thumb",
                loading: "lazy" %>
<% end %>


          <div class="card-body d-flex flex-column">
            <h6 class="card-title mb-1 text-truncate-2">
              <%= link_to product.name,
                          [:storefront, product],
                          class: "stretched-link text-decoration-none" %>
            </h6>
            <div class="text-muted small mb-2">
              <%= product.category&.name || "Uncategorized" %>
            </div>
            <div class="fw-bold mb-3">
              <%= number_to_currency(product.price) %>
            </div>

            <div class="mt-auto">
              <%= button_to "Add to Cart",
                            cart_items_path(product_id: product.id),
                            method: :post,
                            class: "btn btn-outline-primary w-100" %>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= paginate @products if respond_to?(:paginate) %>
  </div>
</div>
