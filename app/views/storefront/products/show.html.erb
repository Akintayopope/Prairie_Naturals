<%# app/views/storefront/products/show.html.erb %>
<% content_for :title, @product.name %>

<div class="container-xxl py-4">
  <!-- Breadcrumb -->
  <nav class="small mb-2">
    <%= link_to "Home", root_path, class: "text-muted text-decoration-none" %> /
    <% if @product.category.present? %>
      <%= link_to @product.category.name,
                  storefront_category_path(@product.category),
                  class: "text-muted text-decoration-none" %> /
    <% end %>
    <span class="text-muted"><%= @product.name %></span>
  </nav>

  <!-- Product Header -->
  <div class="row g-4 mb-2">
    <div class="col-12 col-md-6">
      <div class="border rounded-4 p-2 bg-white">
        <% if @product.images.attached? %>
          <%= image_tag @product.images.first.variant(resize_to_limit: [1200, 1200]),
                        class: "img-fluid w-100 rounded-3", alt: @product.name %>
        <% elsif @product.image_url.present? %>
          <%= image_tag @product.image_url, class: "img-fluid w-100 rounded-3", alt: @product.name %>
        <% else %>
          <div class="ratio ratio-1x1 bg-light d-flex align-items-center justify-content-center rounded-3">
            <span class="text-muted">No image available</span>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <h1 class="h4 mb-2"><%= @product.name %></h1>

      <% sale = @product.respond_to?(:sale_price) && @product.sale_price.present? && @product.sale_price.to_d < @product.price.to_d rescue false %>
      <div class="mb-2 fs-5">
        <% if sale %>
          <span class="text-danger fw-semibold"><%= number_to_currency(@product.sale_price) %></span>
          <span class="text-muted text-decoration-line-through ms-2"><%= number_to_currency(@product.price) %></span>
        <% else %>
          <span class="fw-semibold"><%= number_to_currency(@product.price || 0) %></span>
        <% end %>
      </div>

      <% if @product.stock.present? %>
        <% left = @product.stock.to_i %>
        <div class="mb-3">
          <span class="badge <%= left <= 5 ? 'text-bg-danger' : 'text-bg-success' %>">
            <%= left <= 5 ? "Only #{left} left" : "In stock: #{left}" %>
          </span>
        </div>
      <% end %>

      <div class="mb-3 text-muted">
        <%= simple_format(@product.description.to_s) %>
      </div>

      <div class="d-flex gap-2">
        <%= button_to "Add to Cart",
              add_item_cart_path(product_id: @product.id),
              method: :post,
              class: "btn btn-dark btn-lift" %>

        <%= link_to "Back to shop", storefront_products_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>

  <%# Optional Gallery if multiple images %>
  <% if @product.images.attached? && @product.images.many? %>
    <h2 class="h6 mt-3 mb-2">More images</h2>
    <div class="row g-2 mb-3">
      <% @product.images.each do |image| %>
        <div class="col-4 col-md-2">
          <%= image_tag image.variant(resize_to_limit: [400, 400]),
                        class: "img-fluid border rounded",
                        alt: @product.name %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Customer Reviews -->
  <h2 class="h6 mt-3 mb-2">Customer reviews</h2>
  <% if @reviews.present? && @reviews.any? %>
    <div class="list-group mb-4">
      <% @reviews.each do |review| %>
        <div class="list-group-item">
          <p class="mb-1">
            <strong><%= review.user&.email || "Anonymous" %></strong>
            – ⭐ <%= review.rating %>/5
          </p>
          <p class="mb-0"><%= review.comment %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted mb-4"><em>No reviews yet. Be the first to review this product!</em></p>
  <% end %>

  <!-- Related Products -->
  <h2 class="h6 mt-3 mb-2">You might also like</h2>
  <% if @related_products.present? && @related_products.any? %>
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-2 mb-4">
      <% @related_products.each do |related| %>
        <div class="col">
          <div class="card h-100 product-card">
            <div class="product-media">
              <% if related.images.attached? %>
                <%= link_to image_tag(related.images.first.variant(resize_to_limit: [1200, 1200]),
                                      class: "product-img", alt: related.name),
                            storefront_product_path(related) %>
              <% elsif related.image_url.present? %>
                <%= link_to image_tag(related.image_url, class: "product-img", alt: related.name),
                            storefront_product_path(related) %>
              <% else %>
                <%= link_to storefront_product_path(related) do %>
                  <div class="product-img product-img--placeholder">No image</div>
                <% end %>
              <% end %>
            </div>
            <div class="card-body p-2">
              <h6 class="card-title clamp-2 mb-1">
                <%= link_to related.name, storefront_product_path(related), class: "pn-link text-decoration-none" %>
              </h6>
              <div class="small"><%= number_to_currency(related.price || 0) %></div>
            </div>
            <div class="card-footer bg-white border-0 pt-0">
              <%= button_to "Add to Cart",
                    add_item_cart_path(product_id: related.id),
                    method: :post,
                    class: "btn btn-xs btn-dark w-100 rounded-3" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted mb-4"><em>No related products found.</em></p>
  <% end %>

  <!-- Recently Viewed -->
  <h2 class="h6 mt-3 mb-2">Recently viewed</h2>
  <% if @recently_viewed_products.present? && @recently_viewed_products.any? %>
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-2">
      <% @recently_viewed_products.each do |recent| %>
        <div class="col">
          <div class="card h-100 product-card">
            <div class="product-media">
              <% if recent.images.attached? %>
                <%= link_to image_tag(recent.images.first.variant(resize_to_limit: [1200, 1200]),
                                      class: "product-img", alt: recent.name),
                            storefront_product_path(recent) %>
              <% elsif recent.image_url.present? %>
                <%= link_to image_tag(recent.image_url, class: "product-img", alt: recent.name),
                            storefront_product_path(recent) %>
              <% else %>
                <%= link_to storefront_product_path(recent) do %>
                  <div class="product-img product-img--placeholder">No image</div>
                <% end %>
              <% end %>
            </div>
            <div class="card-body p-2">
              <h6 class="card-title clamp-2 mb-1">
                <%= link_to recent.name, storefront_product_path(recent), class: "pn-link text-decoration-none" %>
              </h6>
              <div class="small"><%= number_to_currency(recent.price || 0) %></div>
            </div>
            <div class="card-footer bg-white border-0 pt-0">
              <%= button_to "Add to Cart",
                    add_item_cart_path(product_id: recent.id),
                    method: :post,
                    class: "btn btn-xs btn-dark w-100 rounded-3" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted"><em>No recently viewed products.</em></p>
  <% end %>
</div>
